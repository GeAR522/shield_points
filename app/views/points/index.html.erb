<html>
  <body>
  <a href='/points/new' >Create New Point</a>
  <br />
  <div class="loggy">
    <p>
      <% if dev_signed_in? %>
        Logged in as <strong><%= current_dev.email %></strong>.
        <%= link_to 'Edit profile', edit_dev_registration_path, :class => 'navbar-link' %> |
        <%= button_to "Logout", destroy_dev_session_path, method: :delete, :class => 'navbar-link'  %>
      <% else %>
        <%= link_to "Sign up", new_dev_registration_path, :class => 'navbar-link'  %> |
        <%= link_to "Login", new_dev_session_path, :class => 'navbar-link'  %>
      <% end %>
    </p>
  </div>
    <div class="points">
      <% @points.each do |point| %>
        <div class="point">
          <h2 class="user">
            <a href='/points/<%= point.id  %>'>
              <%= point.id  %>. <%= point.user  %>
            </a>
          </h2>
          <small class="meta" >
            <span class="point_total" > Points: <%= point.point_total  %></span>
            <br />
            <span class="github_url" > Github Url : <%= point.github_url %></span>
            <br />
            <em class="created_at" >Created on <%= point.create_at %></em>
          </small>
          <a href='/points/<%= point.id  %>/edit'>Edit Points</a>
        </div>
        <form method="post" action="/points/<%=point.id%>" style='display: inline'>
          <input type="hidden" name="_method" value="delete">
          <input type='submit' value='Delete' />
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        </form>
      <% end %>

    </div>
  </body>
</html>
